<div class="topic-show">
  <div class="topic-title">
    <h1><%= @topic.title %></h1>
    <div class="topic-edit">
    <% if @topic.user_id == @current_user.id %>
      <p>
        <%= link_to("編集", "/topics/#{@topic.id}/edit") %>
      </p>
    <% end %>
    </div>
  </div>

  <div class="topic-img">
    <img src="<%= "/topic_images/#{@topic.topic_image_name}" %>" width="600px" >
  </div>

  <div class="topic-youtube">
    
    <iframe width="560" height="315" src="https://www.youtube.com/embed/<%= @topic.youtube_url%>" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
    
  </div>
  
  
  <div class="topic-create">
    <%= form_with model:@post, url:("/posts/create") do |f| %>
      <div class="form">
        <div class="form-body">
          <%= f.text_area :content %>
          <%= f.hidden_field :topic_id, value: @topic.id %>
          <%= f.submit  value: "登録" %>
        </div>
      </div>
    <% end %>
  </div>

  <div class="topic-post">
    <% @posts.each do |post| %>
    <h2>
     :  <%= post.content %>
    </h2>
    
    <% if post.user_id == @current_user.id %>
      <div class="post-menus">
        <p>
        <%= link_to("編集", "/posts/#{post.id}/edit") %>
        </p>
      </div>
      
    <% end %>
    <% end %>
  </div>
  

  
</div>