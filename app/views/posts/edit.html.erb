<div class="posts-edit">
  <div class="container">
    <div class="edit-heading">  
      <h1>編集する</h1>
    </div>

    <%= form_tag("/posts/#{@post.id}/update") do %>
    <div class="form">
      <div class="form-body">
        <textarea name="content"><%= @post.content %></textarea>
        <input type="submit" value="保存">
      </div>
    </div>
    <% end %>
    <div class="delete">
      <%= link_to("削除", "/posts/#{@post.id}/destroy", {method:"post"}) %>
    </div>
  </div>
</div>